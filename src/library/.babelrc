{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": { 
          "node": "10"
        },
        "forceAllTransforms": true
      }
    ],
    "@babel/typescript",
  ],
  "plugins": [
    ["@babel/proposal-decorators", { "decoratorsBeforeExport": true }],
    "@babel/proposal-class-properties",
    "@babel/proposal-object-rest-spread"
  ],
  "env": {
    "development": {
      "plugins": [
        ["module-resolver", {
          "extensions": [".js", ".ts"],
          "alias": {
            "~": "./src/library"
          }
        }]
      ]
    },
    "production": {
      "plugins": [
        ["module-resolver", {
          "extensions": [".js", ".ts"],
          "alias": {
            "~": "./src/library"
          }
        }]
      ]
    },
    "test": {
      "plugins": [
        ["module-resolver", {
          "extensions": [".js", ".ts"],
          "alias": {
            "~": "./src/library"
          }
        }]
      ]
    }
  }
}
